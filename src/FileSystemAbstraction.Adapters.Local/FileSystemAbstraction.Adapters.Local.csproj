<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>FileSystemAbstraction</Product>
    <Company>Sébastien Rigaux</Company>
    <Authors>Sébastien Rigaux</Authors>
    <Description>Provides a 'Local' filesystem abstraction layer to FileSystemAbstraction.</Description>
    <PackageTags>FileSystemAbstraction Local local FileSystem filesystem File file Files files Abstraction abstraction Async async</PackageTags>
    <PackageLicenseUrl>https://raw.githubusercontent.com/srigaux/FileSystemAbstraction/master/license.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/srigaux/FileSystemAbstraction/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/srigaux/FileSystemAbstraction/.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.1.3</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FileSystemAbstraction\FileSystemAbstraction.csproj" />
  </ItemGroup>

</Project>
